use c.{ printf }

let main = fn() {
    printf("Hello\n".data)

    let a = 6
    let b = (a / 3) + 10 * 2
    printf("Binary: %d, %d\n".data, a, b)

    let a = 5
    let b = -a + 8 * (-13)
    printf("Neg: %d, %d\n".data, a, b)

    let a = true
    let b = !a || true
    printf("Bool: %s, %s\n".data, bool_str(a).data, bool_str(b).data)

    printf("Goodbye\n\n".data)
}

let bool_str = fn(b) {
    if b { "true\0" } else { "false\0" }
}

@run(main())