use c.{printf, malloc}

let foo = fn {
    let x = 32
    printf("hello answer: %d\n".data, x + 10)
    let y = 69
    printf("hello favorite: %d\n".data, y)
}

let build = fn {
    foo()
    let x = 5
    printf("hello sum: %d + %d = %d\n".data, x, 10, x + 10)
    let string = "Hello!\0".data;
    printf("hello string: %s\n".data, string)
}

