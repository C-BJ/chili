use c.?

let test = fn {
    printf("Hello, Vm!\n".data)

    // Alloc ptr
    let ptr = malloc(@size_of(int)) as *int
    ptr.* = 42

    // Create struct containing ptr
    let data = .{ ptr }
    
    // Print value
    printf("Value = %d\n".data, data.ptr.*)

    // Assign ptr to new value
    data.ptr.* = 50

    // Print value again
    printf("Value = %d\n".data, data.ptr.*)
}

@run(test())