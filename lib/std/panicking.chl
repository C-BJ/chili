let { printf, exit } = import("std/c");
let { Location } = import("std/intrinsics");

pub fn panic(
    fmt: *str = "unknown reason", 
    location: Location = location()
) -> never = {
    // TODO: use our own print routine.
    printf(
        "panic: \"%s\" at %s:%u:%u\n".data, 
        fmt.data,
        location.file.data,
        location.line,
        location.column
    );

    exit(1)
};