    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'chili'",
      "cargo": {
        "args": ["build", "--bin=chili", "--package=chili"],
        "filter": {
          "name": "chili",
          "kind": "bin"
        }
      },
      "args": ["./examples/playground/build.chili", "--run"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'chili'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=chili", "--package=chili"],
        "filter": {
          "name": "chili",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
